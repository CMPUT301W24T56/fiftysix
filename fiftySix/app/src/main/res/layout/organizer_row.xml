<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/code_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Event Name"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="1000dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notify"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/EditEvent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Send Notification"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/apiLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:text="Location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:padding="16dp"
                android:text="Description: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/progress_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageButton
                            android:id="@+id/checkInsButton"
                            android:layout_width="112dp"
                            android:layout_height="106dp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="@+id/piechartCheckIn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/transparent_background_button" />

                        <org.eazegraph.lib.charts.PieChart
                            android:id="@+id/piechartCheckIn"
                            android:layout_width="179dp"
                            android:layout_height="169dp"
                            android:layout_weight="1"
                            app:egBarWidth="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                        </org.eazegraph.lib.charts.PieChart>


                        <TextView
                            android:id="@+id/checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:text="Check-ins"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/piechartCheckIn" />

                        <TextView
                            android:id="@+id/currentAttendees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="@+id/piechartCheckIn"
                            app:layout_constraintStart_toStartOf="@+id/piechartCheckIn"
                            app:layout_constraintTop_toTopOf="@+id/piechartCheckIn" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageButton
                            android:id="@+id/signUpsButton"
                            android:layout_width="112dp"
                            android:layout_height="106dp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartSignUp"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/transparent_background_button" />


                        <org.eazegraph.lib.charts.PieChart
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/piechartSignUp"
                            android:layout_width="179dp"
                            android:layout_height="169dp"
                            android:layout_weight="1"
                            app:egBarWidth="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />



                        <TextView
                            android:id="@+id/signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:text="Sign-ups"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="@+id/piechartSignUp"
                            app:layout_constraintTop_toTopOf="@+id/piechartSignUp" />

                        <TextView
                            android:id="@+id/currentSignUps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartSignUp"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="@+id/piechartSignUp"
                            app:layout_constraintTop_toTopOf="@+id/piechartSignUp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/attendeeCapacity"
                android:layout_width="251dp"
                android:layout_height="61dp"
                android:layout_below="@+id/progress_bars"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="29dp"
                android:gravity="left|center"
                android:padding="16dp"
                android:text="Event Capacity:"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/event_poster_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_above="@+id/attendeeDetails"
                android:layout_below="@id/attendeeCapacity"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="true"
                android:padding="50dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/EditEvent"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Edit Event"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/attendeeDetails"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/signup_map"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Attendees"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_map"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/notify"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Signup Map"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_qr_code"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/notify"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Share QR Code"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/location"
                android:layout_width="71dp"
                android:layout_height="77dp"
                android:layout_above="@+id/event_poster_image"
                android:layout_below="@+id/progress_bars"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="-2dp"
                android:layout_toStartOf="@+id/attendeeCapacity"
                app:srcCompat="@drawable/icon8_location" />


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>