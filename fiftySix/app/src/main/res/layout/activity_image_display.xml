<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#291017">

    <!-- RecyclerView for displaying images -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--        app:spanCount="3" /> &lt;!&ndash; The spanCount can be changed based on your requirement &ndash;&gt;-->

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="61dp"
        android:layout_height="79dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/transparent_background_button"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/arrow_123" />

</androidx.constraintlayout.widget.ConstraintLayout>
