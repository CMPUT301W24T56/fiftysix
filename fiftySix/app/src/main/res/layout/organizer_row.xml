<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Event Name"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="1150dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/locationOfEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="7dp"
                android:padding="8dp"

                android:text="Location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationOfEvent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="7dp"
                android:padding="6dp"

                android:text="Start Date"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startDate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="7dp"
                android:padding="8dp"
                android:text="End Date: "
                android:textSize="18sp" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/endDate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="7dp"
                android:padding="8dp"
                android:text="Description: "
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/progress_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageButton
                            android:id="@+id/checkInsButton"
                            android:layout_width="112dp"
                            android:layout_height="106dp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="@+id/piechartCheckIn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/transparent_background_button" />

                        <org.eazegraph.lib.charts.PieChart
                            android:id="@+id/piechartCheckIn"
                            android:layout_width="179dp"
                            android:layout_height="169dp"
                            android:layout_weight="1"
                            app:egBarWidth="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </org.eazegraph.lib.charts.PieChart>


                        <TextView
                            android:id="@+id/checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:text="Check-ins"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/piechartCheckIn" />

                        <TextView
                            android:id="@+id/currentAttendees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartCheckIn"
                            app:layout_constraintEnd_toEndOf="@+id/piechartCheckIn"
                            app:layout_constraintStart_toStartOf="@+id/piechartCheckIn"
                            app:layout_constraintTop_toTopOf="@+id/piechartCheckIn" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageButton
                            android:id="@+id/signUpsButton"
                            android:layout_width="112dp"
                            android:layout_height="106dp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartSignUp"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/transparent_background_button" />


                        <org.eazegraph.lib.charts.PieChart xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/piechartSignUp"
                            android:layout_width="179dp"
                            android:layout_height="169dp"
                            android:layout_weight="1"
                            app:egBarWidth="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:text="Sign-ups"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="@+id/piechartSignUp"
                            app:layout_constraintTop_toTopOf="@+id/piechartSignUp" />

                        <TextView
                            android:id="@+id/currentSignUps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/piechartSignUp"
                            app:layout_constraintEnd_toEndOf="@+id/piechartSignUp"
                            app:layout_constraintStart_toStartOf="@+id/piechartSignUp"
                            app:layout_constraintTop_toTopOf="@+id/piechartSignUp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/capacities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bars"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="0dp">

                <TextView
                    android:id="@+id/attendeeCapacity"
                    android:layout_width="189dp"
                    android:layout_height="58dp"

                    android:layout_marginStart="2dp"
                    android:padding="16dp"
                    android:text="Check-in Capacity:"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/attendeeSignUpLimit"
                    android:layout_width="189dp"
                    android:layout_height="58dp"

                    android:layout_marginEnd="2dp"
                    android:padding="16dp"
                    android:text="Sign-up Capacity:"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/event_poster_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/share_qr_code"
                android:layout_below="@id/capacities"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:padding="50dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_qr_code"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/share_promo_qr_code"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Share Check-in QR Code"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_promo_qr_code"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/signup_map"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Share Promo QR Code"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_map"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/notify"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Signup Map"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notify"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_above="@+id/EditEvent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Send Notification"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/EditEvent"
                android:layout_width="384dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dark_round_button"
                android:fontFamily="@font/inter_medium"
                android:text="Edit Event"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>